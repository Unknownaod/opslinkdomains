{
  "version": 2,
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" }
  ],
  "functions": {
    "api/**/*.{js,ts}": {
      "runtime": "nodejs20.x",
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "headers": [
    {
      "source": "/api/checkDomain",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=30, stale-while-revalidate=60" },
        { "key": "X-Edge-Cache", "value": "enabled" }
      ]
    },
    {
      "source": "/api/checkDomain(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "s-maxage=30, stale-while-revalidate=60" }
      ]
    }
  ]
}
